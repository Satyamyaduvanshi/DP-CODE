sum = 0;
points = {{3, 293}, {5, 508}, {6, 585}, {9, 764}};
n = Length[points];
x = points[[All, 1]];
f = points[[All, 2]];

dd[k_] := Sum[
   (f[[l]]/Product[If[Equal[l, i], 1, (x[[l]] - x[[i]])], {i, 1, k}]), {l, 1, k}
];

p[x_] := Sum[
   (dd[i] * Product[(x - x[[j]]), {j, 1, i - 1}]), {i, 1, n}
];

Simplify[p[x]];
Evaluate[p[3.5]];
